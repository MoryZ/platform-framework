<included>
    <include resource="platform-logging-defaults.xml"/>

    <springProperty name="loggingFilename" scope="context" source="logging.file.name" />
    <springProperty name="applicationName" scope="context" source="spring.application.name" />
    <springProperty name="asyncFileEnabled" scope="context" source="logging.logback.async.enabled" defaultValue="true"/>
    <springProperty name="asyncQueueSize" scope="context" source="logging.logback.async.queue-size" defaultValue="8192"/>
    <springProperty name="asyncDiscardingThreshold" scope="context" source="logging.logback.async.discarding-threshold" defaultValue="0"/>
    <springProperty name="asyncIncludeCallerData" scope="context" source="logging.logback.async.include-caller-data" defaultValue="true"/>
    <springProperty name="codeLineOutputEnabled" scope="context" source="logging.logback.code-line-output-enabled" defaultValue="false"/>
    <springProperty name="platformTracingOutputEnabled" scope="context" source="logging.logback.platform-tracing-output-enabled" defaultValue="false"/>
    <springProperty name="tracingOutputEnabled" scope="context" source="logging.logback.tracing-output-enabled" defaultValue="true"/>
    <springProperty name="maskPatterns" scope="context" source="logging.logback.mask-patterns" defaultValue="none"/>

    <conversionRule conversionWord="mask" class="com.old.silence.core.logging.MaskingConverter"/>

    <if condition='property("codeLineOutputEnabled").equals("true")'>
        <then>
            <property name="CODE_LINE_PATTERN" value="%logger{36}:%line"/>
        </then>
        <else>
            <property name="CODE_LINE_PATTERN" value="%logger{36}"/>
        </else>
    </if>

    <if condition='property("platformTracingOutputEnabled").equals("true")'>
        <then>
            <property name="TRACING_PATTERN" value="[TraceId: %X{platform.traceId}] "/>
        </then>
        <else>
            <property name="TRACING_PATTERN" value=""/>
        </else>
    </if>

    <if condition='property("tracingOutputEnabled").equals("true")'>
        <then>
            <property name="PLATFORM_TRACING_PATTERN" value="[TraceId: %X{PtxId}, SpanId: %X{PspanId}, GMod: %X{GlModeHeader}, GHead:%X{LaneHeader}, GLane: %X{LaneMetadata}] "/>
        </then>
        <else>
            <property name="PLATFORM_TRACING_PATTERN" value=""/>
        </else>
    </if>

    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] ${CODE_LINE_PATTERN} - ${TRACING_PATTERN}${PLATFORM_TRACING_PATTERN}%mask(%msg){${maskPatterns}}%n"/>
    <property name="FILE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN}"/>

    <property name="LOG_FILE" value="${LOG_PATH:-${SPRING_HOME:-${user.home}}}/logs/${loggingFilename:-${SERVER_NAME:-${applicationName:-platform}}}.log"/>
    <property name="LOGBACK_ROLLINGPOLICY_MAX_FILE_SIZE" value="500MB"/>
    <property name="LOGBACK_ROLLINGPOLICY_MAX_HISTORY" value="120"/>

    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <include resource="org/springframework/boot/logging/logback/file-appender.xml"/>

    <appender class="ch.qos.logback.classic.AsyncAppender" name="ASYNC_FILE">
        <queueSize>${asyncQueueSize}</queueSize>
        <discardingThreshold>${asyncDiscardingThreshold}</discardingThreshold>
        <includeCallerData>${asyncIncludeCallerData}</includeCallerData>
        <appender-ref ref="FILE"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>

        <if condition='property("asyncFileEnabled").equals("true")'>
            <then>
                <appender-ref ref="ASYNC_FILE"/>
            </then>
            <else>
                <appender-ref ref="FILE"/>
            </else>
        </if>
    </root>

</included>